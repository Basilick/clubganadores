.dropdown-toggle::after {
    display: block;
    position: absolute;
    top: 50%;
    /*right: 20px;*/
    right: 0;
    transform: translateY(-50%);
}

#content {
    width: 100%;
    /*padding: 20px;*/
    min-height: 100vh;
    transition: all 0.3s;
    position: absolute;
    top: 0;
    right: 0;
}

.slidecontainer {
    width: 100%;
    padding: 0 20px;
}

.slider {
    -webkit-appearance: none;
    width: 100%;
    height: 1px;
    background: #B9B9B9;
    outline: none;
    opacity: 0.7;
    -webkit-transition: .2s;
    transition: opacity .2s;
}

.slider:hover {
    opacity: 1;
}

.slider::-webkit-slider-thumb {
    -webkit-appearance: none;
    appearance: none;
    background: #707070;
    cursor: pointer;
    width:12px;
    height:12px;
    border-radius:6px;
}

.slider::-moz-range-thumb {
    width:12px;
    height:12px;
    border-radius:6px;
    background: #707070;
    cursor: pointer;
}
.slidecontainer p{
	width: 100%;
	text-align: center;
	color: #707070;
	font-size: 12px;
}
