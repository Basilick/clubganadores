#sidebar {
    width: 250px;
    position: fixed;
    top: 0;
    left: -260px;
    height: 100vh;
    z-index: 999;
    background: #fff;
    color: #fff;
    transition: all 0.3s;
    overflow-y: scroll;
    box-shadow: 3px 3px 3px rgba(0, 0, 0, 0.2);
}

#sidebar.active {
    left: 0;
     z-index: 3000;
}

#dismiss {
    width: 35px;
    height: 35px;
    line-height: 35px;
    text-align: center;
    position: absolute;
    top: 10px;
    right: 10px;
    cursor: pointer;
    -webkit-transition: all 0.3s;
    -o-transition: all 0.3s;
    transition: all 0.3s;
    color: #707070;
    background: #fff;
    font-size: 16px;
}

#dismiss:hover {
    background: #707070;
    color: #fff;
}
.overlay {
    display: none;
    position: fixed;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.7);
    z-index: 998;
    opacity: 0;
    transition: all 0.5s ease-in-out;
}
.overlay.active {
    display: block;
    opacity: 1;
}

#sidebar ul.components {
    padding:0;
    margin-top: 50px;
}

#sidebar ul li a {
    padding: 10px 20px;
    font-size: 14px;
    display: block;
    text-align: right;
    text-decoration: none;
    color: #707070;
}

#sidebar ul li a:hover {
    color: #333;
    background: #dfdfdf;
}

#sidebar ul li.active>a,
a[aria-expanded="true"] {
    color: #707070;
}

